<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahul.revolutionary.PostDisplayPageActivity">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/author_details"
            android:layout_below="@+id/title_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/name_of_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By : "/>
                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="wrap_content"
                    android:text="Rahul Pandey"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/name_of_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email : "/>
                <TextView
                    android:id="@+id/author_email"
                    android:layout_width="wrap_content"
                    android:text="Rprahulpandey21@gmail.com"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit2"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/trash4"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/love_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/heart_filled"
            android:padding="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1.5" />

    </LinearLayout>

    <TextView
        android:layout_below="@+id/title_bar"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        android:padding="5dp"
        android:text="Title Of the Post" />

    <ScrollView
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_post"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/image_one" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"/>



        </LinearLayout>

    </ScrollView>



</RelativeLayout>
